<body>

  <div class="wrapper">
    <h2>Guest List ðŸ“‹</h2>
    <form id="guest-form">
      <input type="text" id="name-input" placeholder="Enter guest name" required />
      <button type="submit">Add</button>
    </form>

    <ul id="guest-list"></ul>
  </div>

  <script>
    // grab stuff
    const form = document.getElementById('guest-form');
    const input = document.getElementById('name-input');
    const list = document.getElementById('guest-list');

    let people = []; // store all guests

    form.addEventListener('submit', function(e) {
      e.preventDefault(); // no page reload

      const name = input.value.trim();

      if (name === "") return;

      if (people.length >= 10) {
        alert("Only 10 guests allowed.");
        return;
      }

      // make new guest
      const guest = {
        id: Date.now(),
        name: name,
        rsvp: true,
        timeAdded: new Date().toLocaleTimeString()
      };

      people.push(guest);
      showGuests();
      input.value = "";
    });

    function showGuests() {
      list.innerHTML = "";

      people.forEach(function(person) {
        const li = document.createElement('li');

        const span = document.createElement('span');
        span.textContent = `${person.name} - ${person.rsvp ? "Coming ðŸ‘" : "Not Coming âŒ"} @ ${person.timeAdded}`;

        const rsvpBtn = document.createElement('button');
        rsvpBtn.textContent = "RSVP?";
        rsvpBtn.className = "rsvp-btn";
        rsvpBtn.onclick = function() {
          person.rsvp = !person.rsvp;
          showGuests();
        };

        const delBtn = document.createElement('button');
        delBtn.textContent = "Delete";
        delBtn.onclick = function() {
          people = people.filter(p => p.id !== person.id);
          showGuests();
        };

        li.append(span, rsvpBtn, delBtn);
        list.appendChild(li);
      });
    }
  </script>

</body>
</html>
