  <style>
    body {
      font-family: sans-serif;
      background: #eee;
      padding: 20px;
    }

    .wrapper {
      max-width: 500px;
      background: white;
      margin: auto;
      padding: 20px;
      border-radius: 8px;
    }

    h2 {
      text-align: center;
    }

    form {
      display: flex;
      gap: 10px;
      margin-bottom: 15px;
    }

    input[type="text"] {
      flex: 1;
      padding: 10px;
    }

    button {
      padding: 10px;
    }

    ul {
      list-style: none;
      padding: 0;
    }

    li {
      background: #dff;
      margin: 8px 0;
      padding: 10px;
      border-radius: 5px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
    }

    .rsvp-btn {
      margin: 5px;
    }

    @media(max-width: 600px) {
      form {
        flex-direction: column;
      }

      button {
        width: 100%;
      }
